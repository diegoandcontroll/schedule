<%- include('includes/head'); %>

<%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <h1 class="display-1 text-center p-5">
        Agenda
      </h1>
      <% if(contact.length > 0){ %>
      <p class="text-center leader" style="font-weight: 400;">Your contacts below</p>
      <% } %>
      <%- include('includes/messages') %>
      <% if(contact.length > 0) {%>
      <div class="responsive-table">
        <table class="table table-striped my-3">
          <thead class="text-white text-center">
            <tr>
              <th scope="col">#</th>
              <th scope="col">FirstName</th>
              <th scope="col">LastName</th>
              <th scope="col">Phone</th>
              <th scope="col">Email</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </tr>
          </thead>
          <% contact.forEach((data,cont) =>{ %>
          <tbody>
            <tr class="text-white text-center">
            <td><%= cont+= 1 %></td>
            <td><%= data.name %></td>
            <td><%= data.lastname %></td>
            <td><%= data.number %></td>
            <td><%= data.email %></td>
            <td><a href="/contact/<%=data._id%>"><i class="fas fa-edit text-center"></i></a></td>
            <td><a href="/contact/delete/<%=data._id%>"><i style="color: red;" class="fas fa-trash-alt text-center"></i></a></td>
            </tr>
          </tbody>
          <% }); %>
        </table>
      </div>
      <% } else { %>
        <p class="text-center lead">Contacts do not exist</p>
      <%} %>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>